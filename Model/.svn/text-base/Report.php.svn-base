function addData($reports){
	
	$i=0;
	$data = array();
	foreach($reports as $report){
		$data[$i]['Report']['key']=$report['key'];
		$data[$i]['Report']['val']=$report['val'];
		$data[$i]['Report']['account_id']=$report['account_id'];
		$i++;
	}
	$this->create();
	$this->saveAll($data);
}


