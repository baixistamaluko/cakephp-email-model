////FIXEM GROUP COUNTETR if($group_id !=null) {$this->Addressbook->Group->updateGroupAddressCounter(count($this->request->data),$group_id);}
function updateGroupAddressCounter($group_id=null,$Added=null,$account_id=null){
	if (($Added!=null) && ($group_id!=null)){
		$this->query('UPDATE `groups` AS `Group` SET `Group`.`addressbook_count`=`Group`.`addressbook_count`+'.$Added.' WHERE `Group`.`id` = '.$group_id);
	}elseif($group_id!=null){
		$count = $this->AddressbooksGroup->find('count',array('conditions'=>array('group_id'=>$group_id),'recursive'=>-1));
		$this->query('UPDATE `groups` AS `Group` SET `Group`.`addressbook_count`='.$count.' WHERE `Group`.`id` = '.$group_id);
	}elseif($account_id!=null){
		$groups = $this->find('all',array('fields'=>array('id'),'conditions'=>array('account_id'=>$account_id),'recursive'=>-1));
		foreach($groups as $group){
			$this->updateGroupAddressCounter($group['Group']['id']);
		}
	}
